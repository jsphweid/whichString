{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "declaration": true,
        "outDir": "./dist",
        "skipLibCheck": true,
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "typeRoots": [
            "node_modules/@types",
            "local_types"
        ]
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "./src/**/*"
    ]
}
