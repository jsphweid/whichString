{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "sourceMap": true,
    "rootDir": "./src",
    "skipLibCheck": true,
    "strict": true,
    "typeRoots": [
      "node_modules/@types",
      "local-types"
    ],
    "allowSyntheticDefaultImports": true

  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/test"]
}
